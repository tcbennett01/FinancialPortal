@model FinancialPortal.Models.Invitations

<style>
    footer {
        display: none;
    }
</style>

@*<div style="text-align: left">
    <h3 id="dashHeading">Join House</h3>
</div>
<br />*@

<div class="main-header">
    <br />
    <div class="row">
        <div class="col-md-10">
            <h2>Household</h2>
            <em>Join</em>
        </div>
    </div>
</div>


@*<p>
    @Html.ActionLink("New Invitation", "Create")
</p>*@
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @*<h4>Join Household</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <h5 style="font-weight: bold">Receive an email invitation?</h5>
        <div class="form-group">
            @Html.LabelFor(model => model.InviteEmail, "Email", htmlAttributes: new { @class = "control-label col-md-offset-1 col-md-2" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.InviteEmail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.InviteEmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.InvCd, "Invitation Code", htmlAttributes: new { @class = "control-label col-md-offset-1 col-md-2" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.InvCd, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.InvCd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-8">
                <input type="submit" value="Submit Invitation" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<hr />
<h5 class="col-md-3" style="font-weight: bold; display: inline-block">Need to create a new house? </h5><span><button class="btn btn-default"><a href="@Url.Action("Create", "Households")" style="font-size: 14px"> Create House</a></button></span>



