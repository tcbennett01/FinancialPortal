@model IEnumerable<FinancialPortal.Models.Accounts>

@{
    ViewBag.Title = "Index";
}

<Style>
    footer {
        display: none;
    }
</Style>
@*<div style="text-align: left">
    <h2 id="dashHeading">Inactive Accounts</h2>
</div>
